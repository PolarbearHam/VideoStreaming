<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="VideoStreaming"
            android:layout_width="243dp"
            android:layout_height="0dp"
            android:id="@+id/mainTitle"
            android:gravity="center" android:textSize="30sp"
            android:layout_marginTop="219dp"
            android:layout_marginBottom="7dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/deviceInfoTextView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="서버"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterServerButton"
            app:layout_constraintStart_toStartOf="@+id/checkDeviceInfoButton"
            android:layout_marginStart="6dp" app:layout_constraintTop_toBottomOf="@+id/checkDeviceInfoButton"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/videoButton"/>
    <Button
            android:text="기기정보확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkDeviceInfoButton"
            app:layout_constraintStart_toStartOf="@+id/videoButton"
            app:layout_constraintTop_toBottomOf="@+id/enterClientbutton" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/enterServerButton"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deviceInfoTextView"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle" android:layout_marginBottom="131dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/enterClientbutton"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="비디오테스트"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoButton"
            app:layout_constraintTop_toBottomOf="@+id/enterServerButton" android:layout_marginBottom="58dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="클라"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterClientbutton"
            app:layout_constraintStart_toStartOf="@+id/checkDeviceInfoButton"
            android:layout_marginStart="6dp" app:layout_constraintTop_toBottomOf="@+id/deviceInfoTextView"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/checkDeviceInfoButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>